@model Service
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Add Service</h3></div>
                    <div class="card-body">
                        <form method="post" action="/admin/Service/Add">
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <div class="form-floating mb-3 mb-md-3 d-flex align-items-center justify-content-center">
                                        <input asp-for="Title" type="text" placeholder="title name" class="form-control w-100" id="TitleName" placeholder="Enter Title" />
                                        <label for="TitileName" class="w-100">Titile</label>
                                    </div>
                                    <div class="form-floating  mb-3 mb-md-3 d-flex">
                                        <input asp-for="IconName" type="text" placeholder="icon name" class="form-control w-100" id="IconName" placeholder="Enter Icon Name" />
                                        <label for="IconName" class="w-100">Icon Name</label>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-start">
                                        <label for="TitileName" class="my-1 mx-2">Shown On Page</label>
                                        <input asp-for="ShownOnPage" type="checkbox" class="" id="ShownOnPageName" />
                                        
                                    </div>
                                    <div class="form-floating mt-3 d-flex align-items-center justify-content-between">
                                        <input asp-for="Description" type="text" class="form-control w-100" id="Description" placeholder="Enter Description" />
                                        <label for="Description" class="w-25">Description</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
