@model Entities.Concrete.TableModels.Skill
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}




<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Edit Skill</h3></div>
                    <div class="card-body">
                        <form method="post" action="/admin/skill/Edit">
                            <div class="form-group d-flex justify-content-between">

                                <input asp-for="ID" type="text" hidden class="form-control w-50" id="id" readonly />
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <div class="form-floating mb-3 mb-md-3 d-flex align-items-center justify-content-between">
                                       
                                        <input asp-for="Name" type="text" class="form-control w-50" id="skillname" placeholder="Enter New Skill" />
                                        <label for="SkillName">Skill Name</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <button type="submit" class="btn btn-success">Save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

